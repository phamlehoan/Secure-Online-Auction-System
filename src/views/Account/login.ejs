<%- include ("../CommonFiles/headerAccount") %>

<div class="container">
    <div class="signin-content">
        <div class="signin-image">
            <figure>
                <img src="/Account/images/signin-image.jpg" alt="sing up image" />
            </figure>
            <a href="/register" class="signup-image-link">Create an account</a>
        </div>

        <div class="signin-form">
            <h2 class="form-title">Login</h2>
            <form method="POST" class="register-form" id="login-form">
                <div id="login">
                    <div class="form-group">
                        <label for="user_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="user_name" id="user_name" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="your_pass" id="your_pass" placeholder="Password" />
                    </div>
                </div>

                <div id="forgot-passwd" style="display: none;">
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="email" id="email" placeholder="Email" />
                    </div>
                </div>

                <div class="form-group forgot-password">
                    <input type="checkbox" name="check-forgot-passwd" id="check-forgot-passwd" class="agree-term" />
                    <label for="check-forgot-passwd" class="label-agree-term"><span><span></span></span>I forgot my
                        password</label>
                </div>
                <div class="form-group form-button">
                    <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                </div>
            </form>
            <div class="social-login">
                <span class="social-label">Or login with</span>
                <ul class="socials">
                    <li>
                        <a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include ("../CommonFiles/footerAccount") %>